@page
@model WebApp.Pages.Songs.IndexModel

@{
    ViewData["Title"] = "Index";
    string placeholderImageFileName = "no_image.png";
}
<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="display-5">Songs</h1>
                <p class="lead text-muted">All the artist in Northern Uganda come together on our platform to share their music and song. To tell stories that change the lives of all who hear and make the world better. To share experience and stories. This is the beauty in Northern Uganda. Brought to you by Luo Sound City.</p>
            </div>
        </div>
        @if (Model.SongListViewModel is not null && Model.SongListViewModel.Count > 0)
        {
            <div class="row">
                <div class="col">
                    <a asp-page="Create" class="btn btn-outline-primary mb-4">Create song</a>
                </div>
            </div>
        }
    </div>
</section>
<section class="py-5">
    <div class="container">

        @if (Model.SongListViewModel is not null && Model.SongListViewModel.Count > 0)
        {
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4">
                @foreach (var song in Model.SongListViewModel)
                {
                    <div class="col p-2">
                        <div class="card shadow-sm">
                            <img asp-append-version="true" src="~/images/@(song.ClipArtUrl ?? placeholderImageFileName)" alt="clip art of @song.Title" class="card-img-top card-image" width="100%" height="200px" />
                            <div class="card-body d-flex flex-column justify-content-end">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h1 class="card-title h5">@Html.DisplayFor(modelItem => song.Title)</h1>
                                    <p class="card-text fw-light fs-6 text-muted">@Html.DisplayFor(modelItem => song.Genre)</p>
                                </div>
                                <p class="card-text lead">@Html.DisplayFor(modelItem => song.Artist.Name)</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <div class="w-50 mx-auto d-flex flex-column justify-content-center align-items-center gap-4 text-center">
                        <h2 class="display-6">No information found</h2>
                        <p class="lead">No song was found in the database at this time. Be the first to add a song.</p>
                        <a asp-page="Create" class="btn btn-outline-primary">Create song</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

@section Scripts{
    <script>

    </script>
}