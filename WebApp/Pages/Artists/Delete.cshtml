@page "{id:int:min(1)}"
@model WebApp.Pages.Artists.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="display-6">Delete</h1>
        </div>
        <div class="col-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title fs-4">Delete account for @Model.ArtistDeleteViewModel.Name</h1>
                    <form method="post">
                        <input type="hidden" asp-for="ArtistDeleteViewModel.Id" />
                        <div class="form-group my-2 d-flex align-items-center gap-2">
                            <input type="submit" value="Delete" class="btn btn-outline-danger w-100" />
                            <a asp-page="Details" asp-route-ID="@Model.ArtistDeleteViewModel.Id" class="btn btn-outline-primary w-100">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

