@page
@model WebApp.Pages.Artists.IndexModel

@{
    ViewData["Title"] = "Index";
    string placeholderImageFileName = "no_image.png";
}

<section class="py-5">
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="display-5">Artists</h1>
                <p class="lead text-muted">All the artist in Northern Uganda come together on our platform to share their music and song. To tell stories that change the lives of all who hear and make the world better. To share experience and stories. This is the beauty in Northern Uganda. Brought to you by Luo Sound City.</p>
            </div>
        </div>
        @if (Model.ArtistListViewModel is not null && Model.ArtistListViewModel.Count > 0)
        {
            <div class="row">
                <div class="col">
                    <a asp-page="Create" class="btn btn-outline-primary mb-4">Create artist</a>
                </div>
            </div>
        }
    </div>
</section>
<section class="py-5">
    <div class="container">

        @if (Model.ArtistListViewModel is not null && Model.ArtistListViewModel.Count > 0)
        {
            <div class="row row-cols-2 row-cols-md-4">
                @foreach (var artist in Model.ArtistListViewModel)
                {
                    <div class="col p-2">
                        <div class="card shadow-sm">
                            <img asp-append-version="true" src="~/images/@(artist.DisplayImageUrl ?? placeholderImageFileName)" alt="image of @artist.Name" class="card-img-top card-image" width="100%" height="200px" />
                            <div class="card-body d-flex flex-column align-items-start justify-content-end">
                                <h1 class="card-title fs-5">@Html.DisplayFor(modelItem => artist.Name)</h1>
                                <p class="card-text lead">@Html.DisplayFor(modelItem => artist.Genre)</p>
                                <a asp-page="Details" asp-route-ID="@artist.Id" class="btn btn-link">View</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="row">
                <div class="col">
                    <div class="w-50 mx-auto d-flex flex-column justify-content-center align-items-center gap-4 text-center">
                        <h2 class="display-6">No information found</h2>
                        <p class="lead">No artist was found in the database at this time. Be the first to add an artist.</p>
                        <a asp-page="Create" class="btn btn-outline-primary">Create artist</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
