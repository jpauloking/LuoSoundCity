@page
@model WebApp.Pages.Charts.CreateModel

@{
    ViewData["Title"] = "Create";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ChartCreateViewModel.CreatedBy" value="Black boy" class="form-control" />
                <div class="row">
                    <div class="form-group col-12">
                        <label asp-for="ChartCreateViewModel.Title" class="control-label"></label>
                        <input asp-for="ChartCreateViewModel.Title" class="form-control" />
                        <span asp-validation-for="ChartCreateViewModel.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="ChartCreateViewModel.Description" class="control-label"></label>
                        <textarea asp-for="ChartCreateViewModel.Description" class="form-control"></textarea>
                        <span asp-validation-for="ChartCreateViewModel.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ChartCreateViewModel.Year" class="control-label"></label>
                        <input asp-for="ChartCreateViewModel.Year" class="form-control" min="1900" />
                        <span asp-validation-for="ChartCreateViewModel.Year" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ChartCreateViewModel.Month" class="control-label"></label>
                        <input asp-for="ChartCreateViewModel.Month" class="form-control" min="1" max="12" />
                        <span asp-validation-for="ChartCreateViewModel.Month" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="ChartCreateViewModel.Week" class="control-label"></label>
                        <input asp-for="ChartCreateViewModel.Week" class="form-control" min="1" max="53"/>
                        <span asp-validation-for="ChartCreateViewModel.Week" class="text-danger"></span>
                    </div>
                    <div class="form-group col-12">
                        <label asp-for="ChartCreateViewModel.DisplayImageUrl" class="control-label"></label>
                        <input asp-for="ChartCreateViewModel.DisplayImageFile" class="form-control file-input" />
                        <input type="hidden" asp-for="ChartCreateViewModel.DisplayImageUrl" class="form-control" />
                        <span asp-validation-for="ChartCreateViewModel.DisplayImageUrl" class="text-danger"></span>
                    </div>
                    <div class="form-group my-4 d-flex align-items-center gap-2">
                        <input type="submit" value="Create" class="btn btn-primary w-100" />
                        <a asp-page="Index" class="btn btn-outline-primary w-100">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
